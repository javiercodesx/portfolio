{
  "name": "javier_gonzalez_portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "mdlint": "true --- TODO: RE-ENABLE WHEN MARKDOWNLINT GETS ITS ACT TOGETHER --- markdownlint . .github -i node_modules -c ./etc/.markdownlint.jsonc",
    "mdlint:fix": "true --- TODO: RE-ENABLE WHEN MARKDOWNLINT GETS ITS ACT TOGETHER --- pnpm mdlint --fix",
    "lint": "pnpm lint:ts && pnpm lint:js",
    "lint:ts": "eslint 'src/**/*.{m,c,}ts' 'test/**/*.{m,c,}ts' --config ./etc/eslint.ts.config.mjs --no-error-on-unmatched-pattern",
    "lint:js": "eslint 'src/**/*.{m,c,}js' 'test/**/*.{m,c,}js' --config ./etc/eslint.js.config.mjs --no-error-on-unmatched-pattern",
    "lint:fix": "pnpm lint:fix:ts && pnpm lint:fix:js",
    "lint:fix:ts": "pnpm lint:ts --fix",
    "lint:fix:js": "pnpm lint:js --fix",
    "prettier": "prettier etc src test --config ./etc/.prettierrc.json --no-error-on-unmatched-pattern --check",
    "prettier:fix": "pnpm prettier --write",
    "format": "pnpm prettier:fix && pnpm lint:fix && pnpm mdlint:fix",
    "build": "vite build",
    "build:analyze": "node ./scripts/analyze.mjs",
    "doc": "pnpm doc:api && pnpm doc:internal",
    "doc:api": "typedoc --options ./etc/typedoc.api.json",
    "doc:internal": "typedoc --options ./etc/typedoc.internal.json",
    "clean": "rm -rf dist",
    "test": "pnpm test:unit && pnpm test:meta && pnpm test:regression",
    "test:unit": "jest --runInBand --config=./etc/jest.unit.config.cjs",
    "test:meta": "jest --runInBand --config=./etc/jest.meta.config.cjs",
    "test:regression": "jest --runInBand --config=./etc/jest.regression.config.cjs",
    "reset": "pnpm clean && rm -rf node_modules && rm -f pnpm-lock.yaml",
    "all": "pnpm reset; pnpm up --latest; pnpm format; pnpm lint; pnpm mdlint; pnpm build",
    "pack:clean": "./etc/pack",
    "run:all": "pnpm run:datasources; pnpm run:datasets; pnpm run:tables"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@tabler/icons-react": "^3.34.0",
    "@tailwindcss/vite": "^4.1.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.2"
  }
}